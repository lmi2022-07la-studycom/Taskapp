<h3>会員登録</h3>
<% if @user.errors.any? %>
<% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
<% end %>
<%= form_with(model: @user, url: signup_path) do |f| %>
<dl>
    <dt>名前</dt>
    <dd><%= f.text_field :user_name %></dd>
    <dt>生年月日</dt>
    <dd><%= f.date_field :birthday %></dd>
    <dt>E-mail</dt>
    <dd><%= f.email_field :email %></dd>
    <dt>パスワード</dt>
    <dd><%= f.password_field :password %></dd>
    <dt>パスワード（確認）</dt>
    <dd><%= f.password_field :password_confirmation %></dd>
</dl>
<%= f.submit '会員登録' %>
<% end %>