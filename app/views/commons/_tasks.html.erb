<TABLE BORDER="0" class="table table-striped table-bordered">
<TR><TH class="text-center">未着手</TH><TH class="text-center">実施中</TH><TH class="text-center">完了</TH></TR>
<TR>
<TD>
    <table class="table table-bordered">
        <tr>
            <th>タスク</th><th>期日</th><th>ステータス変更</th>
        </tr>
        <% @tasks.where(status: 'todo').each do |task| %>
        <tr>
            <td><%= task.title %></td>
            <td><%= task.deadline.strftime("%m月%d日%H時%M分") %></td>
            <%= form_with(model: task) do |f| %>
            <td><%= f.select :status, {'未着手': 'todo', '実施中': 'doing', '完了': 'done'}, onchange: 'this.form.submit()' %> <%= f.submit '更新' %></td>
            <% end %>
            <td><%= link_to '編集', edit_task_path(task) %></td>
            <td><%= link_to '削除', task_path(task), method: :delete, data: {confirm: '削除しますか？'} %></td>
        </tr>
        <% end %>
    </table>
</TD>
