<table>
    <tr>
        <th>id</th><th>タスク内容</th><th>ステータス</th><th>登録日時</th><th>更新日時</th><th>編集ボタン</th><th>削除ボタン</th>
    </tr>
    <% @tasks.each do |task| %>
    <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.status %></td>
        <td><%= task.created_at %></td>
        <td><%= task.updated_at %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task_path(task), method: :delete, data: {confirm: '削除しますか？'} %></td>
    </tr>
    <% end %>
</table>