<table>
    <tr>
        <th>タスク内容</th><th>ステータス</th><th>ステータス変更</th><th>登録日時</th>
    </tr>
    <% @tasks.each do |task| %>
    <tr>
        <td><%= task.title %></td>
        <% if task.status == 'todo' %>
        <td>未着手</td>
        <% elsif task.status == 'doing' %>
        <td>実施中</td>
        <% elsif task.status == 'done' %>
        <td>完了</td>
        <% end %>
        <%= form_with(model: task) do |f| %>
        <td><%= f.select :status, {'未着手': 'todo', '実施中': 'doing', '完了': 'done'} %> <%= f.submit '更新' %></td>
        <% end %>
        <td><%= task.created_at.strftime('%Y/%m/%d %H時%M分%S秒') %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task_path(task), method: :delete, data: {confirm: '削除しますか？'} %></td>
    </tr>
    <% end %>
</table>